extends layouts/app.pug

block content
  main.flex-grow-1.d-flex.flex-column.justify-content-center
    .container
      .row.d-flex.flex-column.align-items-center
        .col-8
          .card
            .card-header.bg-danger.text-white
              h1.h5.mb-0 Error found
            .card-body
              .row
                .col-4.d-flex.justify-content-center.align-items-center
                  h3.display-1.text-danger.d-none.d-sm-block.ml-3= err.status
                  h3.display-5.text-danger.d-block.d-sm-none.ml-3.ml-sm-0= err.status
                .col-8.d-flex.justify-content-center.align-items-center
                  p.card-text.d-none.d-sm-block.ml-3= err.message
                  p.card-text.d-block.d-sm-none.small= err.message